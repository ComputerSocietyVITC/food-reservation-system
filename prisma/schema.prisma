// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  userid    String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  contact   Int
  type      String?
}

model Items {
  item_id String @id @default(cuid())
}

model Buyer {
  bid                     String         @id @default(cuid())
  buyer_name              String?
  total_transaction_value Int?
  saved_method            String?
  fav_method              String?
  created_at              DateTime       @default(now())
  last_purchased_at       DateTime       @updatedAt
  Transactions            Transactions[]
}

model Transactions {
  tid          String      @id @default(cuid())
  buyerID      Int?
  orderOn      DateTime
  cartValue    Int?
  customer     Buyer       @relation(fields: [buyerId], references: [bid])
  buyerId      String
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt
  Discounts    Discounts[]
  Owner        Owner?      @relation(fields: [ownerOwnerID], references: [OwnerID])
  ownerOwnerID Int?
}

model Discounts {
  couponid      String       @id @default(cuid())
  transaction   Transactions @relation(fields: [transactionId], references: [tid])
  transactionId String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Owner {
  OwnerID       Int            @id
  StoreLocation String
  OwnerName     String
  OwnerNickName String         @unique
  UPI_ID        String
  Transactions  Transactions[]
}
